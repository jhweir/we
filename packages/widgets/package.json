{
  "name": "@we/widgets",
  "version": "0.1.0",
  "description": "Widget components for WE",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles/index.css"
    },
    "./solid": {
      "types": "./dist/solid/index.d.ts",
      "import": "./dist/solid/index.js"
    }
  },
  "peerDependencies": {
    "@we/elements": "^1.0.0",
    "@we/components": "^0.1.0",
    "solid-js": "^1.9.0"
  },
  "devDependencies": {
    "@we/tokens": "workspace:*",
    "@we/elements": "workspace:*",
    "@we/components": "workspace:*",
    "esbuild-plugin-solid": "^0.6.0",
    "sass": "^1.92.1",
    "solid-js": "^1.9.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build:css": "sass src/styles/index.scss dist/styles/index.css --no-source-map --style=compressed",
    "build": "tsup --config tsup.config.ts && pnpm build:css",
    "clean": "rimraf dist"
  },
  "publishConfig": {
    "access": "public"
  }
}
