{
  "name": "@we/block-composer-solid",
  "version": "0.1.0",
  "description": "Composable block-based editor and renderer for posts, comments, pages, and more.",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles/index.css",
      "default": "./dist/styles/index.css"
    }
  },
  "dependencies": {
    "@lexical/list": "^0.30.0",
    "@lexical/markdown": "^0.30.0",
    "@lexical/rich-text": "^0.30.0",
    "@lexical/utils": "^0.30.0",
    "lexical": "^0.30.0",
    "lexical-solid": "^0.21.0"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0",
    "@we/components": "^0.1.0",
    "@we/models": "^0.1.0",
    "@coasys/ad4m": "0.10.1"
  },
  "devDependencies": {
    "@we/elements": "workspace:*",
    "@we/components": "workspace:*",
    "@we/models": "workspace:*",
    "esbuild-plugin-solid": "^0.6.0",
    "sass": "^1.92.1",
    "solid-js": "^1.9.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build:css": "sass src/styles/index.scss dist/styles/index.css --no-source-map --style=compressed",
    "build": "tsup --config tsup.config.ts && pnpm build:css"
  }
}
