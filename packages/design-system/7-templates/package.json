{
  "name": "@we/templates",
  "version": "0.1.0",
  "description": "Templates components for WE",
  "author": "James Weir",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build:css": "sass src/styles/index.scss dist/styles/index.css --no-source-map --style=compressed",
    "build:steps": "tsup && pnpm build:css",
    "build": "we-build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles/index.css"
    },
    "./solid": {
      "types": "./dist/solid/index.d.ts",
      "import": "./dist/solid/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "zod": "^4.1.11"
  },
  "peerDependencies": {
    "@we/elements": "^1.0.0",
    "@we/components": "^0.1.0",
    "@we/widgets": "^0.1.0",
    "@we/pages": "^0.1.0",
    "solid-js": "^1.9.0"
  },
  "devDependencies": {
    "@we/cli": "workspace:*",
    "@we/tokens": "workspace:*",
    "@we/elements": "workspace:*",
    "@we/components": "workspace:*",
    "@we/widgets": "workspace:*",
    "@we/pages": "workspace:*",
    "esbuild-plugin-solid": "^0.6.0",
    "sass": "^1.92.1",
    "solid-js": "^1.9.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "*.css"
  ]
}
