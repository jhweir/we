{
  "name": "@we/tokens",
  "version": "0.1.0",
  "description": "Design tokens for WE",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./css": "./dist/css/index.css",
    "./css/*": "./dist/css/*.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "keywords": [
    "design-tokens",
    "css",
    "design-system",
    "tokens"
  ],
  "author": "James Weir",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist dist-plugins",
    "build:plugin": "esbuild plugins/css-generator.ts --outfile=dist/plugins/css-generator.js --format=esm --platform=node",
    "build:tokens": "rollup -c",
    "build": "pnpm run clean && pnpm run build:plugin && pnpm run build:tokens"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.28.1",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
